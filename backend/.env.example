# Database Configuration
NODE_ENV=development
USE_MEMORY_DB=false

# PostgreSQL Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=tradeeasy
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgresql_password

# Scheduler Configuration
DISABLE_SCHEDULER=false                 # Set to true to disable all scheduled jobs
PRICE_POLL_SCHEDULE="0 * * * *"         # Cron schedule for price data polling (default: every hour)
# RISK_UPDATE_SCHEDULE="0 0 * * *"      # Cron schedule for risk data updates (default: daily at midnight)
# TARIFF_UPDATE_SCHEDULE="0 0 * * 1"    # Cron schedule for tariff updates (default: weekly on Monday)

# JWT Configuration
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=90d

# API Keys for Data Services
# To use real data from these services, get valid API keys and replace the placeholder values

# Quandl API - For price data
# Get a key from https://www.quandl.com/
QUANDL_API_URL=https://www.quandl.com/api/v3
QUANDL_API_KEY=your_quandl_api_key

# OpenWeatherMap API - For weather data and forecasts
# Get a key from https://openweathermap.org/api
OPENWEATHERMAP_API_URL=https://api.openweathermap.org/data/2.5
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key

# USITC API - For tariff information
# This is a public API but may require registration
USITC_API_URL=https://hts.usitc.gov/api

# Google Cloud AI Platform - For ML-based price forecasting
# Get credentials from Google Cloud Console
GOOGLE_CLOUD_AI_URL=https://us-central1-aiplatform.googleapis.com/v1/projects/your-project/locations/us-central1/endpoints
GOOGLE_CLOUD_AI_API_KEY=your_google_cloud_api_key

# USITC DataWeb API
DATAWEB_API_URL=https://dataweb.usitc.gov/api/v1
DATAWEB_AUTH_TOKEN=your_dataweb_auth_token